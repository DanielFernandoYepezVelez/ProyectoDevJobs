<main class="contenedor">
  <form action="/vacante/nueva" method="POST" class="default-form">
    <h3>Informacion General</h3>

    <div class="campo">
      <label for="titulo">Titulo:</label>
      <input type="text" name="titulo" placeholder="Ej: React Developer" required>
    </div>

    <div class="campo">
      <label for="empresa">Empresa:</label>
      <input type="text" name="empresa" placeholder="Empresa Contrata" required>
    </div>

    <div class="campo">
      <label for="ubicacion">Ubicacion:</label>
      <input type="text" name="ubicacion" placeholder="Ej: Antioquia o Remoto" required>
    </div>

    <div class="campo">
      <label for="salario">Salario (USD):</label>
      <input type="text" name="salario" placeholder="Ej: 500(USD)" required>
    </div>

    <div class="campo">
      <label for="contrato">Contrato</label>

      <select name="contrato">
        <option value="" disabled selected>-- Selecciona --</option>
        <option value="Freelance">Freelance</option>
        <option value="Tiempo Completo">Tiempo Completo</option>
        <option value="Medio Tiempo">Medio Tiempo</option>
        <option value="Por Proyecto">Por Proyecto</option>
      </select>
    </div>

    <h3>Descripcion Del Puesto</h3>

    <div class="campo descripcion">
      <label>Descripcion</label>
      {{!-- Srive De Espejo, Para Capturar Los Datos, Por Eso Se Oculta --}}
      <input type="hidden" {{!-- type="text" --}} id='x' name="descripcion">
      <trix-editor input='x'></trix-editor>
    </div>

    <h3>Conocimientos</h3>

    <ul class="lista-conocimientos">
      {{#seleccionarSkills a}}
      {{/seleccionarSkills}}
    </ul>

    <div class="centrar-horizontal campo">
      <input type="submit" value="Publicar" class="btn btn-azul">
    </div>

  </form>
</main>